<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.lab1024.smartadmin.module.business.model.dao.AuthModelDao">

    <resultMap id="AuthModelVO" type="net.lab1024.smartadmin.module.business.model.domain.vo.AuthModelVO"></resultMap>
    <resultMap id="AuthModelExcelVO" type="net.lab1024.smartadmin.module.business.model.domain.vo.AuthModelExcelVO"></resultMap>


    <select id="queryByPage" resultMap="AuthModelVO">
        select
          id,
          name,
          model,
          auth,
          dest,
          create_time,
          creator,
          is_delete,
          is_use,
          update_time
        from t_auth_model
        <where>
            <if test="queryDTO.id != null">
                AND id = #{queryDTO.id}
            </if>
            <if test="queryDTO.name != null and queryDTO.name != ''">
                AND INSTR(name,#{queryDTO.name})
            </if>

            <if test="queryDTO.createTimeBegin != null ">
                AND create_time &gt;= #{queryDTO.createTimeBegin}
            </if>
            <if test="queryDTO.createTimeEnd != null ">
                AND create_time &lt;= #{queryDTO.createTimeEnd}
            </if>

            <if test="queryDTO.updateTimeBegin != null ">
                AND update_time &gt;= #{queryDTO.updateTimeBegin}
            </if>
            <if test="queryDTO.updateTimeEnd != null ">
                AND update_time &lt;= #{queryDTO.updateTimeEnd}
            </if>
        </where>
    </select>

    <select id="queryAllExportData" resultMap="AuthModelExcelVO">
        select
           id,
           name,
           model,
           auth,
           dest,
           create_time,
           creator,
           is_delete,
           is_use,
           update_time
        from t_auth_model
        <where>
            <if test="queryDTO.id != null">
                AND id = #{queryDTO.id}
            </if>
            <if test="queryDTO.name != null and queryDTO.name != ''">
                AND INSTR(name,#{queryDTO.name})
            </if>

            <if test="queryDTO.createTimeBegin != null ">
                AND create_time &gt;= #{queryDTO.createTimeBegin}
            </if>
            <if test="queryDTO.createTimeEnd != null ">
                AND create_time &lt;= #{queryDTO.createTimeEnd}
            </if>

            <if test="queryDTO.updateTimeBegin != null ">
                AND update_time &gt;= #{queryDTO.updateTimeBegin}
            </if>
            <if test="queryDTO.updateTimeEnd != null ">
                AND update_time &lt;= #{queryDTO.updateTimeEnd}
            </if>
        </where>
    </select>

    <select id="queryBatchExportData" resultMap="AuthModelExcelVO">
        select
         id,
         name,
         model,
         auth,
         dest,
         create_time,
         creator,
         is_delete,
         is_use,
         update_time
        from t_auth_model
        where id in
        <foreach collection="idList" open="(" close=")" separator="," item="item">
            #{item}
        </foreach>
    </select>

    <delete id="deleteById">
        delete from t_auth_model where id = #{id}
    </delete>

    <delete id="deleteByIdList">
        delete from t_auth_model where id in
        <foreach collection="idList" open="(" close=")" separator="," item="item">
            #{item}
        </foreach>
    </delete>

</mapper>